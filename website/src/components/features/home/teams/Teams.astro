---
import { Image } from "astro:assets";

import type { Props as ProfileData } from "./ProfileCard.astro";
import Button from "@/components/ui/Button.astro";
import Separator from "@/components/ui/Separator.astro";

import Chris from "@/assets/teams/chris-avatar.png";
import Joe from "@/assets/teams/joe-avatar.png";
import Nik from "@/assets/teams/nik-avatar.png";
import Cezary from "@/assets/teams/cezary-avatar.png";
import Rob from "@/assets/teams/rob-avatar.png";
import ProfileCard from "./ProfileCard.astro";

const profileData: ProfileData[] = [
  {
    name: "Joe Mattia",
    title: "Chief Operating Officer",
    avatar: {
      alt: "Joe Mattia's avatar",
      src: Joe,
    },
  },
  {
    name: "Nik Heger",
    title: "Senior Software Engineer",
    avatar: {
      alt: "Nik Heger's avatar",
      src: Nik,
    },
  },
  {
    name: "Cezary Olborski",
    title: "Senior Software Engineer",
    avatar: {
      alt: "Cezary Olborski's avatar",
      src: Cezary,
    },
  },
  {
    name: "Rob Thijssen",
    title: "Dev Ops",
    avatar: {
      alt: "Rob Thijssen's avatar",
      src: Rob,
    },
  },
];
---

<section
  id="teams"
  class="bg-team relative flex flex-col gap-[50px] px-4 py-[100px] min-[366px]:px-[30px]"
>
  <Separator class="absolute top-0 left-0" variant="2" />

  <div class="flex flex-col">
    <h2 class="font-medium-title-mobile mb-5">The Core Team</h2>

    <p class="font-body mb-[30px]">
      Founded by veteran engineers from early-stage crypto startups and former
      CTO roles. The team combines deep expertise in applied cryptography and
      zero-knowledge systems with a proven ability to ship secure, scalable
      infrastructure.
    </p>

    <Button href="/contact" variant="outline">Get in Touch</Button>
  </div>

  <figure class="flex flex-col gap-5">
    <figcaption class="flex w-[280px] flex-col gap-2">
      <h3 class="font-small-title">Christopher Smith</h3>
      <Separator class="h-[0.5px]" />
      <p class="font-large-body text-text-content-secondary">
        Chief Executive Officer
      </p>
    </figcaption>

    <Image
      class={"w-full"}
      src={Chris}
      alt="Christopher Smith's avatar"
      layout="full-width"
    />

    <div>
      <p class="font-body text-white">
        A technology pioneer and entrepreneur at the forefront of AI,
        blockchain, and quantum computing, Chris brings a rare mix of deep
        technical expertise and philosophical thinking. He's spent the last
        decade building tools that empower individuals and redefine digital
        trust.
      </p>

      <br />

      <ul class="font-body list-disc ps-4 text-white">
        <li>Founder of BitMesh, Lunyr (LUN), and FactoryDAO (FVT)</li>
        <li>Early contributor to foundational Bitcoin libraries</li>
        <li>
          Former AI team lead at Tensor Spark, specializing in applied machine
          learning
        </li>
        <li>
          Private cybersecurity advisor for HNW individuals and digital asset
          recovery
        </li>
        <li>
          Focus: Cryptography, Complexity Theory, Algebraic Topology, Quantum
          Computing
        </li>
      </ul>
    </div>
  </figure>

  <div class="flex flex-col gap-[42px]">
    {profileData.map((data) => <ProfileCard {...data} />)}
  </div>
</section>
