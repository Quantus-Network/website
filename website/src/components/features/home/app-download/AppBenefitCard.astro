---
import Separator from "@/components/ui/Separator.astro";

interface Props {
  title: string;
  content: string;
}

const { title, content } = Astro.props;
---

<div
  class="bg-app-benefit-card relative rounded-[10px] px-10 py-[35px] backdrop-blur-[20px]"
>
  <Separator class="absolute top-0 left-0" variant="2" />

  <p>{title}</p>
  <p>{content}</p>
</div>
