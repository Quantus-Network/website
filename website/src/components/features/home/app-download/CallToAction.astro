---
import Button from "@/components/ui/Button.astro";
import SphereDecoration from "@/components/ui/SphereDecoration.astro";
import { createTranslator, getLocaleFromUrl } from "@/utils/i18n";

const locale = getLocaleFromUrl(Astro.url.pathname);
const t = await createTranslator(locale);
---

<div
  class="relative overflow-hidden px-[30px] pt-20 pb-[84px] lg:pt-[100px] lg:pb-[90px] xl:px-0"
>
  <SphereDecoration
    class="absolute top-[1rem] left-[4.7rem] -z-10"
    variant="8"
    size={190}
  />
  <SphereDecoration
    class="absolute -right-[14rem] bottom-[5rem] -z-10 lg:-right-[3rem] lg:-bottom-[8rem]"
    variant="9"
    size={346}
  />

  <div class="max-w-content mx-auto flex flex-col">
    <p class="font-tag-caps text-text-title-secondary mb-5">
      {t("app.cta.tagline")}
    </p>

    <div
      class="flex flex-col lg:flex-row lg:items-end lg:justify-between lg:gap-6"
    >
      <h2 class="font-medium-title-mobile mb-12">
        {t("app.cta.title")}
      </h2>

      <Button class="lg:w-[295px] lg:shrink-0" href="/app" target="_self"
        >{t("app.cta.button")}</Button
      >
    </div>
  </div>
</div>
