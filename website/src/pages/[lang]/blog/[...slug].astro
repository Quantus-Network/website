---
import { type CollectionEntry, getCollection, render } from "astro:content";
import BlogPost from "@/components/features/blog/BlogPost.astro";
import { SUPPORTED_LOCALES, type Locale } from "@/utils/i18n";

export async function getStaticPaths() {
  const posts = await getCollection("blog");

  const paths = posts.map((post) => {
    const [lang, ...slugParts] = post.id.split("/");
    const slug = slugParts.join("/");

    // Normalize lang to match SUPPORTED_LOCALES case if possible
    const normalizedLang = SUPPORTED_LOCALES.find(
      (l) => l.toLowerCase() === lang.toLowerCase(),
    );

    return {
      params: { lang: normalizedLang || lang, slug },
      props: post,
    };
  });

  // Filter paths to ensure only supported locales are generated
  return paths.filter(({ params }) =>
    SUPPORTED_LOCALES.includes(params.lang as Locale),
  );
}

type Props = CollectionEntry<"blog">;

const post = Astro.props;
const { Content } = await render(post);
---

<BlogPost {...post.data}>
  <Content />
</BlogPost>
