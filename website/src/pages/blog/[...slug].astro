---
import { type CollectionEntry, getCollection, render } from "astro:content";
import BlogPost from "@/components/features/blog/BlogPost.astro";
import { DEFAULT_LOCALE } from "@/utils/i18n";

export async function getStaticPaths() {
  const posts = await getCollection("blog", ({ id }) => {
    return id.toLowerCase().startsWith(`${DEFAULT_LOCALE.toLowerCase()}/`);
  });

  return posts.map((post) => {
    const [_lang, ...slugParts] = post.id.split("/");
    const slug = slugParts.join("/");
    return {
      params: { slug },
      props: post,
    };
  });
}

type Props = CollectionEntry<"blog">;

const post = Astro.props;

const allPosts = await getCollection("blog", ({ id }) => {
  return id.toLowerCase().startsWith(`${DEFAULT_LOCALE.toLowerCase()}/`);
});

const relatedPosts = allPosts
  .filter((p) => p.id !== post.id)
  .map((p) => ({
    post: p,
    score: p.data.tags.filter((tag) => post.data.tags.includes(tag)).length,
  }))
  .filter((p) => p.score > 0)
  .sort((a, b) => b.score - a.score)
  .slice(0, 3)
  .map((p) => p.post);

const { Content } = await render(post);
---

<BlogPost {...post.data} relatedPosts={relatedPosts}>
  <Content />
</BlogPost>
